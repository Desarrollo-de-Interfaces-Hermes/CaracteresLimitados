<Window x:Class="CaracteresLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaracteresLimitados"
        mc:Ignorable="d"
        Title="Caracteres Limitados" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFFB5757"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="CuadroTexto" HorizontalAlignment="Left" Height="356" Margin="63,30,0,0" VerticalAlignment="Top" Width="646" TextChanged="EscribirTexto" TextWrapping ="Wrap" AcceptsReturn="True"/>
        <TextBlock x:Name="ContadorLetras" HorizontalAlignment="Left" Margin="676,386,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Height="23" Width="33" Foreground="#FFA09C9C"><Run Text="0/140"/><LineBreak/><Run/></TextBlock>
    </Grid>
</Window>
